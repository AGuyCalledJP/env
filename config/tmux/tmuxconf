set -ga terminal-overrides ",screen-256color*:Tc"
set-option -g default-terminal "screen-256color"
set -s set-clipboard on
set -s escape-time 0

set -s extended-keys on
set -as terminal-features 'xterm*:extkeys'

# start window indexing at one instead of zero
set -g base-index 1
set -g pane-base-index 1

set -g history-limit 1000000
set -g mouse on

# Tmux Appearance -------------------- {{{
set -g status-left " #S "
set -g status-left-length 13

set -g window-status-current-format "#{?window_zoomed_flag,[,}#I#{?window_zoomed_flag,],}"
set -g window-status-format "#{?window_zoomed_flag,[,}#W#{?window_zoomed_flag,],}"

# #h hostshort , #S session , #W window , #T pane name
wg_prfx=" #{?client_prefix,<Prefix>,}"  # prefix indicator widget
wg_pane=" #{=26:pane_title}"
wg_date=" %d-%b-%Y#[none]"
wg_time=" %H:%M"
set -g status-right "${wg_prfx}${wg_pane}${wg_date}${wg_time}"
# }}}

# reload config file (change file location to your the tmux.conf you want to use)
bind r source-file ~/.env/config/tmux/tmuxconf
