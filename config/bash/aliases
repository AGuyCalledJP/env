alias back="cd ${OLDPWD}"
alias c="clear"
alias chr="chmod 644"
alias chx="chmod 755"
alias cla="clear;ls -lFha"
alias cl="clear;ls -lFh"

alias df='df -h'
alias dirs="dirs -p"

alias grEp="grep -E"
alias greP="grep -P"
alias grip="grep -i"
alias griP="grep -iP"
alias grvp="grep -v"

alias hgrep="history|grep -E"
alias h='history'

alias la='ls -lFha'
alias lgrep='ls|grep'
alias ll='ls -lFh'
alias l='ls -CF'
alias n='nvim'

alias rmf="rm -rf"

alias src="source ${HOME}/.profile && source ${HOME}/.bashrc"

alias va="source ./venv/bin/activate"
alias ve="python3 -m venv ./venv"

alias www="python3 -m http.server 8000"
